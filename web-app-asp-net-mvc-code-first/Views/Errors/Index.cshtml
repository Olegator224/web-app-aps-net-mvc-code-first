@using web_app_asp_net_mvc_code_first.Models.Entities
@model List<Error>

<h3>Ошибки</h3>

@Html.ActionLink("Добавить запись", "Create", "Errors")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                Картинка
            </th>
            <th>
                Код ошибки
            </th>
            <th>
                Тип(ы) ошибки
            </th>
            <th>
                Описание
            </th>
            <th>
                Дата и время
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var error in Model)
        {
        <tr>
            <td>
                <img src="/Errors/GetImage/@error.Id" style="max-width: 100px; max-height: 200px;" />
            </td>
            <td>
                @error.Code
            </td>
            <td>
                @string.Join(", ", error.ErrorTypes.Select(x => $"{x.Type}"))
            </td>
            <td>
                @error.Description
            </td>
            <td>
                @error.Date.ToString("dd-MM-yyyy HH:mm:ss")
            </td>
            <td>
                @Html.ActionLink("Удалить", "Delete", "Errors", new { id = error.Id }, new { })
                @Html.ActionLink("Изменить", "Edit", "Errors", new { id = error.Id }, new { })
            </td>
        </tr>
        }
    </tbody>
</table>